page {
    height: 100%;
    width: 100%;
}

.result {
    height: 100%;
    width: 100%;
    overflow: hidden;
    display: flex;
   align-items: center;
   justify-content: center;
}

.mt2{
  margin-top:20px;
}

.myCanvas {
    width: 450px;
    height: 250px;
    /* background:red; */
    border-radius: 6px;
    position: absolute;
    top: -100vh;
    left: -100vw;
    display: flex;
   align-items: center;
   justify-content: center;
}

.imgWrap {
    width: 375px;
    height: 208px;
    margin: 0 auto;
    margin-top: 20px;
}
.imgWrap .img {
    width: 100%;
    height: 100%;
    box-shadow: 0 8px 16px -8px rgba(0,0,0,0.4);
    border-radius:6px;
}


.buttonWrap {
    margin-top: 30px;
    display: flex;
    justify-content: space-around;
}

.buttonWrap .btn {
    border-radius: 20px;
    background: #92bca6;
    padding: 10px 15px;
    font-size: 18px;
    color: #fff;
    display: inline-block;
    box-sizing:content-box;
    margin:0;
}

.buttonWrap .w3{
    width:35%;
    text-align:center;
    line-height:1;
}

.buttonWrap .share{
    background:#fa154c;
}

.buttonWrap .save{
    font-size:16px;
    color:#7d7d7d;
    margin-bottom:20px;
}